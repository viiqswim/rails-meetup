<div class="container center">
  <div class="row">
    <div class="col-md-12">
      <h2>Group Organizers</h2>
      <div class="btn-group">
        <%= link_to "See Members", group_members_path, class: "btn btn-info" %>
      </div>
      
      <hr />
      
      <% if @users.empty?  %>
       <p> There are no organizers yet. </p>
      <% else %>
      <table class="table table-striped table-bordered">
        <thead class="thead-inverse">
          <tr>
            <td><b>First Name</b></td>
            <td><b>Last Name</b></td>
            <td><b>Role</b></td>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <% next unless user.is_organizer?(@group.id) %>
            <tr>
              <td><%= user.first_name %></td>
              <td><%= user.last_name %></td>
              <td><%= user.role(@group.id).name %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <% end %>
    </div>
  </div>
</div>